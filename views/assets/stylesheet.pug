style(type="text/css").
    body {
        display: flex;
        flex-direction: column;
        padding: 40px 70px;
    }

    .navbar {
    display: flex;
    justify-content: space-between;
    }

    .navbar * {
    margin: 10px 0;
    }

    .auth {
    display: flex;
    }

    .auth a {
    margin-left: 10px;
    color: inherit;
    text-decoration: none;
    }

    .error {
    color: red;
    }

    form {
    display: flex;
    flex-direction: column;
    }

    form input {
    margin-bottom: 10px;
    }

    .projects-list {
    margin: 20px;
    }

    .project {
    display: flex;
    justify-content: space-between;
    margin: 10px 0;
    }

    .bugs-list {
    margin: 20px;
    }

    .bug {
    display: flex;
    justify-content: space-between;
    margin: 10px 0;
    }

    .comment p:nth-of-type(2) {
    text-align: right;
    }